<header id="header">
  <div class="container">
    <nav>
      <ul>
        <li><%= t('navigation.archives') %></li>
        <li><%= t('navigation.sponsors') %></li>
        <li><%= t('navigation.about_us') %></li>
        <li><%= t('navigation.contact') %></li>
        <% if user_signed_in? %>
          <li>
          <%= link_to('Edit registration', edit_user_registration_path) %>
          </li>
          <li>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          </li>
        <% else %>
          <li>
            <%= link_to(button_tag(content_tag(:span, 'Login'), class: 'btn-clear'), new_user_session_path)  %>
          </li>
          <li>
            <%= link_to('Register', new_user_registration_path)  %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
